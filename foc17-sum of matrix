#include<stdio.h>
int main()
{
	int a[10][10],b[10][10],i,j,k,r,c,sum[10][10];
	printf("enter the no of rows ");
	scanf("%d",&r);
	printf("enter the no of columns:");
	scanf("%d",&c);
	printf("\nfirstmatrix:");
	for(i=0;i<r;i++)
	for(j=0;j<c;j++)
	{
		scanf("%d",&a[i][j]);
	}
	printf("\nsecondmatrix:");
	for(i=0;i<r;i++)
	for(j=0;j<c;j++)
	{
		scanf("%d",&b[i][j]);	
	}
	for(i=0;i<r;i++)
	for(j=0;j<c;j++)
	{
		sum[i][j]=a[i][j]+b[i][j];	
}
	for(i=0;i<r;i++)
	for(j=0;j<c;j++)
	{
		printf("sum of matrices:%d",sum[i][j]);
		printf("\n");
	}
}

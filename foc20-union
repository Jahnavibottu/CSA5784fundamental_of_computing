#include<stdio.h>
#include<string.h>
#include<conio.h>
union
{
	char name[25];
	int idno;
	float salary;
}desc;
int main()
{
	strcpy(desc.name,"vinod");
	printf("employee details:");
	printf("the name is %s",desc.name);
	printf("the idno is %d",desc.idno);
	printf("the salary is %f",desc.salary);
	desc.idno=10;
	printf("employee details:");
	printf("the name is %s",desc.name);
	printf("the idno is %d",desc.idno);
	printf("the salary is %f",desc.salary);
	desc.salary=6500.00;
	printf("employee details:");
	printf("the name is %s",desc.name);
	printf("the idno is %d",desc.idno);
	printf("the salary is %f",desc.salary);	
}
